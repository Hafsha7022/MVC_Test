<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    .dropbtn {
        /*background-color: #04AA6D;*/
        /*color: black;*/
        padding: 0px;
        font-size: 30px;
        border: none;
    }

    /* The container <div> - needed to position the dropdown content */
    .dropdown {
        position: relative;
        display: inline-block;
        text-align: center;
    }
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        text-align: center;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-align: center;
            text-decoration: none;
            display: block;
        }

            /* Change color of dropdown links on hover */
            .dropdown-content a:hover {
                background-color: #ddd;
            }

    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Change the background color of the dropdown button when the dropdown content is shown */
    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
        color: white;
    }
</style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Create Employee", "CreateEmp", "Home")</li>
                    <li style="background-color: #636363;">@Html.ActionLink("CustomerList", "GetAllRecord", "Home")</li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="pull-right">
                        <ul class="nav navbar-nav" style="margin-right: 4%">
                            <li class="dropdown">
                                <button type="submit" class="btn navbar-btn btn-default dropbtn" name="logout" id="logout" value="Log Out">@Session["UserName"].ToString()</button>
                                <ul class="dropdown-content">
                                    @Html.ActionLink("Log Out", "Logout", "Default")
                                    @*<a href="Default/Logout">LogOut</a>*@
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="pull-right">
                        <ul class="nav navbar-nav" style="margin-right: 4%" >
                            <li class="btn navbar-btn btn-primary " style=" padding: 0px 0px; font-size: 16px;">@Html.ActionLink("Log In", "Login", "Default")</li>
                            @*<li><button type="submit" class="btn navbar-btn btn-danger" name="logout" id="logout" value="Log Out">Log In</button></li>*@
                        </ul>
                    </div>
                }



            </div>
            
        </div>
    </div>
    @*<div class="container body-content">*@
        @RenderBody()
       
    @*</div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
